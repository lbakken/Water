doctype html
html
extends layout

head
	meta(charset='utf-8')
	meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
	meta(name='description', content='')
	title Login Page

body
	link(href='../resources/css/my_style', rel='stylesheet')

block content
	.text-dark
		center
			.page-header
				h2(align='center') Welcome Back!
			form(method='POST' action='/login')
				.form-group
					label(for='username') Username:
					input#username.form-control(name="username" type='text' placeholder="Username" style="width: 300px")
				.form-group
					label(for='password') Password:
					input#password.form-control(name='password' type='password' placeholder="Password" style="width: 300px")
				a(href="login")
					button#Reg.submit_button(type='submit') Log in
			b
			h3 Don't have an account?   
				a(href="register") Register Here

script.